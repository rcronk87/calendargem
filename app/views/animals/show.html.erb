<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @animal.name %>
</p>

<p>
  <strong>Latin name:</strong>
  <%= @animal.latin_name %>
</p>

<p>
  <strong>Kingdom:</strong>
  <%= @animal.kingdom %>
</p>

<p>
  <strong>Know Sightings</strong>
  <ul>
    <% @animal.sightings.each do |sighting| %>
        <li>
            <%= sighting.date %> <%= sighting.time %>
        </li>
    <% end %>
  </ul>
</p>


<%= link_to 'Edit', edit_animal_path(@animal) %> |
<%= link_to 'Back', animals_path %>

<p>
  <!-- Input area for new wine -->
  <div class="field">
    <label for="sighting_date">Date</label><br>
    <input type="text" name="sighting[date]" id="sighting_date" />
  </div>
  <div class="field">
    <label for="sighting_time">Time</label><br>
    <input type="text" name="sighting[time]" id="sighting_time" />
  </div>
  <div class="field">
    <label for="sighting_latitude">Latitude</label><br>
    <input type="text" name="sighting[latitude]" id="sighting_latitude" />
  </div>
  <div class="field">
    <label for="sighting_longitude">Longitude</label><br>
    <input type="text" name="sighting[longitude]" id="sighting_longitude" />
  </div>
  <button id="add_new_sighting_button">Add New Sighting</button>
</p>
